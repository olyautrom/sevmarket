<div class="wrapper">
    <ul class="breadcrumb">
        <li><a href="/">Главная</a></li>
        <li><a href="/#production">Продукция</a></li>
        <li><a href="/prepared-meal">Готовые изделия</a></li>
        <li>{{ title }}</li>
    </ul>
    <h1>{{ title }}</h1>
    <div class="production-menu">
        {{#each selectCategory}}
            <h5><a href="#{{ value }}">{{ name }}</a></h5>
        {{/each}}
    </div>
</div>
{{#each selectCategory}}
<div class="product-section" id="{{ value }}">
    <div class="wrapper">
        <h2>{{ name }}</h2>
        <div class="product-grid">
            {{#each products}}
            <div class="grid__item">
                <a href="/{{@root.page}}/{{_id}}">
                    <img src="{{ mainImage }}" alt="">
                    <p>{{ title }}</p>
                </a>
            </div>
            {{/each}}
        </div>
    </div>
</div>
{{/each}}