<div class="row">
    <div class="col s12 m10"><h3>{{ title }}</h3></div>
    <div class="col s12 m2"><a href="/admin/users/add" class="user-add btn-floating btn-large waves-effect waves-light deep-orange lighten-3"><i class="material-icons">add</i></a></div>
</div>
{{#if error}}
  <p class="alert"> {{ error }}</p>
{{/if}}
{{#if users.length}}
 <table class="responsive-table striped">
        <thead>
          <tr>
              <th>Логин</th>
              <th>Права доступа</th>
              <th class="right"></th>
          </tr>
        </thead>
        
        <tbody>
           {{#each users}}
          <tr>
            <td>{{ login }}</td>
            <td>{{ role }} </td>
            <td class="right">
                <a href="/admin/users/{{id}}/edit?allow=true" class="waves-effect waves-light btn"><i class="material-icons">edit</i></a>
                <a href="/admin/users/{{id}}/delete?allow=true" class="waves-effect waves-light btn red"><i class="material-icons">delete</i></a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
{{else}}
<p>Пользователей нет</p>
{{/if}}
