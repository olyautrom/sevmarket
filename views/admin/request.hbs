<div class="row">
  <div class="col s12 m10">
    <h3>{{ title }}</h3>
  </div>
</div>
{{#if requestNew.length}}
<h5>Новые:</h5>
<table class="responsive-table striped">
  <thead></thead>
  <tbody>
    {{#each requestNew}}
    <tr>
      <td>
        <h5 style="color:#00796b">{{ name }}</h5>
        <p>{{ phone }}</p>
        <p>{{ email }}</p>
        <p>{{ comment }}</p>
      </td>
      <td class="right">
        <a href="/admin/request/{{_id}}/check?allow=true" class="waves-effect waves-light btn"><i
            class="material-icons">check</i></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{#if request.length}}
<h5>Архив:</h5>
<table class="responsive-table striped">
  <thead></thead>
  <tbody>
    {{#each request}}
    <tr>
      <td>
        <h5 style="color:#9e9e9e">{{ name }}</h5>
        <p>{{ phone }}</p>
        <p>{{ email }}</p>
        <p>{{ comment }}</p>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>Заявок нет</p>

{{/if}}
{{/if}}